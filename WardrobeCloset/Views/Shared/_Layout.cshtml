<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet">
    <title>@ViewBag.Title - ProCloset</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="header" class="page-header" style="margin-bottom: 0px;">
        <div class="page-header-container">
            <div class="header-top clearfix" style="background-color:black;">
                <div class="logo-container clearfix">
                    <h1 style="font-family: 'Muli', sans-serif; color:white; text-align:center; font-size:46px;">ProCloset</h1>
                </div>
            </div>
            <div class="navbar navbar navbar-static-top" style="background-color:#ECECEC;margin-bottom: 0px;border-bottom-width: 0px;">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav" id="centered">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Tops", "Index", "Tops")</li>
                            <li>@Html.ActionLink("Bottoms", "Index", "Bottoms")</li>
                            <li>@Html.ActionLink("Shoes", "Index", "Shoes")</li>
                            <li>@Html.ActionLink("Accessories", "Index", "Accessories")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fuild body-content">
        @RenderBody()
        </hr>
        <footer>
            <p>&copy; @DateTime.Now.Year - ProCloset App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
